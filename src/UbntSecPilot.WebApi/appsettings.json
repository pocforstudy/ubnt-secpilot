{
  "ConnectionStrings": {
    "MongoDB": "mongodb://localhost:27017/UbntSecPilot"
  },
  "MongoDB": {
    "DatabaseName": "UbntSecPilot",
    "Uri": "mongodb://mongo:27017,localhost:27017",
    "Database": "ubnt_secpilot",
    "EventsCollection": "events",
    "FindingsCollection": "findings",
    "DecisionsCollection": "decisions"
  },
  "Redpanda": {
    "BootstrapServers": "localhost:19092",
    "GroupId": "ubnt-secpilot-consumers",
    "Topic": "udm.events",
    "PollTimeoutMs": 1000
  },
  "UDM": {
    "BaseUrl": "https://192.168.1.1",
    "Username": "admin",
    "Password": "your_password_here",
    "ApiUrl": "https://192.168.1.1/proxy/network/integration/v1/sites",
    "ApiToken": "",
    "Site": "default",
    "VerifySsl": false,
    "PollInterval": 30,
    "PageSize": 200,
    "Timeout": 10,
    "MaxAttempts": 3,
    "Endpoints": [
      "/proxy/network/integration/v1/sites",
      "/proxy/network/api/s/{site}/stat/session",
      "/proxy/network/api/s/{site}/rest/firewallrule",
      "/proxy/network/api/s/{site}/insights/flows"
    ]
  },
  "VirusTotal": {
    "ApiKey": "",
    "BaseUrl": "https://www.virustotal.com/api/v3",
    "Enabled": false,
    "Timeout": 10,
    "MaliciousThreshold": 3,
    "AutoBlock": false
  },
  "Spark": {
    "AppName": "UBNT-SecPilot-Agent"
  },
  "Intelligence": {
    "Engine": "spark",
    "Model": "spark-threat-analyzer",
    "GroqSecretKey": "",
    "ThreadModel": "llama3.2",
    "ThreadEngine": "spark-hybrid",
    "ThreadEndpoint": "http://127.0.0.1:11434"
  },
  "Agent": {
    "BatchSize": 25
  },
  "Syslog": {
    "Host": "0.0.0.0",
    "Port": 5514
  },
  "Metrics": {
    "Port": 9108
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "UBNT-SecPilot",
    "Audience": "UBNT-SecPilot-Users",
    "SecretKey": "your-secret-key-here",
    "ExpirationMinutes": 60
  },
  "Security": {
    "SecretKey": "your-secret-key-here"
  },
  "Environment": {
    "Name": "development"
  }
}
