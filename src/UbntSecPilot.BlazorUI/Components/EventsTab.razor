@using UbntSecPilot.Domain.Models

<div class="row">
    <div class="col-12">
        <h5>Network Events (@Events.Count)</h5>
        @if (Events.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Event ID</th>
                            <th>Source</th>
                            <th>Summary</th>
                            <th>Occurred At</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var networkEvent in Events.Take(20))
                        {
                            <tr>
                                <td>@networkEvent.EventId</td>
                                <td>@networkEvent.Source</td>
                                <td>@networkEvent.ShortSummary()</td>
                                <td>@networkEvent.OccurredAt.ToLocalTime()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Events.Count > 20)
            {
                <div class="text-muted">Showing first 20 of @Events.Count events</div>
            }
        }
        else
        {
            <p class="text-muted">No events recorded yet.</p>
        }
    </div>
</div>

@code {
    [Parameter]
    public List<NetworkEvent> Events { get; set; } = new();
}
