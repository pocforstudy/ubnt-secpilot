@using UbntSecPilot.Agents.Orleans

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3>ðŸ§  Orleans Agent Management</h3>
                <button class="btn btn-outline-primary" @onclick="RefreshAll" disabled="@_isLoading">
                    @if (_isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                    }
                    Refresh Status
                </button>
            </div>
        </div>
    </div>

    <!-- Available Agents -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Available Agents</h5>
                </div>
                <div class="card-body">
                    @if (_availableAgents.Any())
                    {
                        <div class="row">
                            @foreach (var agent in _availableAgents)
                            {
                                var status = _agentStatuses.GetValueOrDefault(agent, new AgentStatus(agent, "unknown", false));
                                <div class="col-md-4 mb-3">
                                    <div class="card border-@GetStatusBadgeClass(status) h-100">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-2">
                                                <span class="me-2">@GetStatusIcon(status)</span>
                                                <h6 class="card-title mb-0">@agent</h6>
                                            </div>
                                            <div class="mb-2">
                                                <span class="badge bg-@GetStatusBadgeClass(status)">
                                                    @status.Status
                                                </span>
                                                @if (status.IsRunning)
                                                {
                                                    <span class="badge bg-warning ms-1">Running</span>
                                                }
                                            </div>
                                            <small class="text-muted">
                                                Last updated: @status.LastUpdated.ToLocalTime().ToString("g")
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <p>No agents available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Agent Control Panel -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Agent Control Panel</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">Select Agent</label>
                            <select class="form-select" @bind="_selectedAgent">
                                <option value="">-- Select Agent --</option>
                                @foreach (var agent in _availableAgents)
                                {
                                    <option value="@agent">@agent</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6 d-flex align-items-end">
                            <button class="btn btn-primary me-2" @onclick="RunSelectedAgent" disabled="@string.IsNullOrEmpty(_selectedAgent) || _isRunningAgent">
                                @if (_isRunningAgent)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                Run Agent
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Agent Results -->
    @if (_agentResults.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Agent Execution Results</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var result in _agentResults)
                        {
                            var agentName = result.Key;
                            var agentResult = result.Value;
                            <div class="mb-4">
                                <h6>@agentName Result</h6>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <strong>Action:</strong> @agentResult.Action
                                            </div>
                                            <div class="col-md-6">
                                                <strong>Created:</strong> @agentResult.CreatedAt.ToLocalTime().ToString("g")
                                            </div>
                                        </div>
                                        <div class="row mt-2">
                                            <div class="col-12">
                                                <strong>Reason:</strong>
                                                <p class="mt-1">@agentResult.Reason</p>
                                            </div>
                                        </div>
                                        @if (agentResult.Metadata.Any())
                                        {
                                            <div class="row mt-2">
                                                <div class="col-12">
                                                    <strong>Metadata:</strong>
                                                    <pre class="mt-1"><code>@System.Text.Json.JsonSerializer.Serialize(agentResult.Metadata, new System.Text.Json.JsonSerializerOptions { WriteIndented = true })</code></pre>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
